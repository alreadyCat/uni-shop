.goods-detail-box {
  padding-bottom: 50px;
}
swiper {
  height: 750rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.goods-info-box {
  display: flex;
  flex-direction: column;
  padding: 10px 0 10px 10px;
}
.goods-info-box .price {
  color: #c00000;
  font-size: 20px;
}
.goods-info-box .content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px 0;
}
.goods-info-box .content .collect {
  width: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.goods-info-box .content .collect text {
  font-size: 12px;
}
.goods-info-box .content .name {
  font-size: 15px;
  border-right: 1px solid #efefef;
  padding-right: 10px;
}
.goods-info-box .express {
  color: gray;
  font-size: 12px;
}
.uni-goods-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}

