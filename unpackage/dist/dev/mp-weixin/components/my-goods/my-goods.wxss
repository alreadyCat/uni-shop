/* 水平间距 */
.goods-item {
  display: flex;
  padding: 5px 0;
  border-bottom: 1px solid #f0f0f0;
}
.goods-item .left-img {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-left: 5px;
  width: 120px;
  height: 100px;
  margin-right: 5px;
}
.goods-item .left-img image {
  width: 120px;
  height: 100px;
  display: block;
}
.goods-item .right-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 5px;
  padding-right: 10px;
}
.goods-item .right-content .desc {
  font-size: 13px;
}
.goods-item .right-content .goods-priceAndCount {
  display: flex;
  justify-content: space-between;
}
.goods-item .right-content .goods-priceAndCount .price {
  color: #c00000;
  font-size: 16px;
  font-weight: bold;
}

