/* 水平间距 */
.settle-container {
  position: fixed;
  width: 100%;
  height: 50px;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 0 5px;
}
.settle-container .radio {
  display: flex;
  align-items: center;
  justify-content: center;
}
.settle-container .total .price {
  color: #c00000;
}
.settle-container .settle {
  height: 50px;
  color: #fff;
  background-color: #c00000;
  line-height: 50px;
  padding: 0 10px;
  min-width: 70px;
  text-align: center;
}

