/* 水平间距 */
.my-userinfo-container {
  height: 100%;
  background-color: #efefef;
}
.my-userinfo-container .top-box {
  height: 400rpx;
  background-color: #c00000;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.my-userinfo-container .top-box .avatar {
  width: 90px;
  height: 90px;
  border-radius: 45px;
  border: 2px solid #fff;
  box-shadow: 0 1px 5px black;
  overflow: hidden;
}
.my-userinfo-container .top-box .avatar image {
  width: 90px;
  height: 90px;
}
.my-userinfo-container .top-box .nickname {
  font-size: 16px;
  color: #fff;
  font-weight: bold;
  margin-top: 10px;
}
.my-userinfo-container .panel-list {
  padding: 0 10px;
  position: relative;
  top: -10px;
}
.my-userinfo-container .panel-list .panel {
  padding: 0 10px;
  margin-bottom: 10px;
  position: relative;
  background-color: #fff;
  border-radius: 3px;
}
.my-userinfo-container .panel-list .panel .panel-title {
  padding-left: 10px;
  font-size: 15px;
  border-bottom: 1px solid #f4f4f4;
  line-height: 45px;
}
.my-userinfo-container .panel-list .panel .panel-body {
  border-radius: 3px;
  display: flex;
  justify-content: space-around;
}
.my-userinfo-container .panel-list .panel .panel-body .panel-item {
  padding: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.my-userinfo-container .panel-list .panel .panel-body .panel-item .name {
  margin-top: 3px;
  font-size: 14px;
}
.my-userinfo-container .panel-list .panel .panel-body .panel-item .icon {
  width: 35px;
  height: 35px;
}
.my-userinfo-container .panel-list .panel .panel-list-item {
  display: flex;
  justify-content: space-between;
  padding: 10px 10px;
  font-size: 15px;
}

