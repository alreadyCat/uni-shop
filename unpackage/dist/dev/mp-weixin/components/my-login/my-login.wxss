/* 水平间距 */
.login-container {
  height: 750rpx;
  background-color: #F8F8F8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.login-container::after {
  content: ' ';
  width: 100%;
  height: 50px;
  background-color: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  border-radius: 100%;
  -webkit-transform: translateY(50%);
          transform: translateY(50%);
}
.login-container .btn-login {
  background-color: #c00000;
  width: 90%;
  height: 40px;
  margin: 15px 0;
  border-radius: 20px;
  line-height: 40px;
}

