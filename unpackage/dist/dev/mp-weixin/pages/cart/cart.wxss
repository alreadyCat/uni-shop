/* 水平间距 */
.cart-container {
  padding-bottom: 50px;
}
.title {
  display: flex;
  align-items: center;
  height: 40px;
  border-bottom: 1px solid #efefef;
}
.title text {
  margin-left: 10px;
}
.goods-list .goods-item {
  display: flex;
}
.goods-list .goods-item .goods-info {
  display: flex;
  flex-direction: column;
}
.cart-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 150px;
}
.cart-empty image {
  width: 90px;
  height: 90px;
}
.cart-empty text {
  font-size: 12px;
  color: gray;
  margin-top: 15px;
}

